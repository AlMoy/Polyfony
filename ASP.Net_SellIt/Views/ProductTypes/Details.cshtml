@model EntityASP.Entity.ProductType

@{
    ViewBag.Title = "Details";
}

<div class="d-flex flex-column">
    <div>
        @Html.ActionLink("Retour à la liste", "Index", new { }, new { @class = "btn btn-secondary text-secondary" })
        @{
            if (User.IsInRole("Admin"))
            {
                @Html.ActionLink("Editer", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary text-primary" })
            }
        }
    </div>

    <div class="d-flex mt-3">
        <div>
            <p>
                <strong>@Html.DisplayNameFor(model => model.Name)</strong>
                @Html.DisplayFor(model => model.Name)
            </p>
            <p>
                <strong>@Html.DisplayNameFor(model => model.Price)</strong>
                @Html.DisplayFor(model => model.Price)
            </p>
            <p>
                <strong>@Html.DisplayNameFor(model => model.ProductTypeTVAs.Where(tva => tva.TVA.EndDate == null).FirstOrDefault().TVA.Rate)</strong>
                @Html.DisplayFor(model => model.ProductTypeTVAs.Where(tva => tva.TVA.EndDate == null).FirstOrDefault().TVA.Rate)
            </p>
        </div>
    </div>
</div>