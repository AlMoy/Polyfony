@model EntityASP.Entity.ProductType

@{
    ViewBag.Title = "Supprimer un type de produit";
}

    <div>
        <h3>Voulez vous supprimer ce type de produit?</h3>
        <hr />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                @Html.ActionLink("Retour à la liste", "Index", "ProductTypes", null, new { @class = "btn btn-primary" })
                <input type="submit" value="Supprimer" class="btn btn-primary" />
            </div>
        }

        <h4 class="mt-3">Détaill du type de produit</h4>
        <hr />
        <div class="d-flex flex-column">
            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Price)</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Html.DisplayFor(model => model.Name)</td>
                        <td>@Html.DisplayNameFor(model => model.Price)</td>

                    </tr>

                </tbody>

            </table>
        </div>

    </div>
