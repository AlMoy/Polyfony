@model EntityASP.Entity.Person

@{
    ViewBag.Title = "Supprimer une personne";
}
 


    <div>
        <h3>Voulez vous supprimer cette personne?</h3>
        <hr />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-primary" />
                @Html.ActionLink("Back to List", "Index", "People", null, new { @class = "btn btn-primary" })
            </div>
        }
        <h4 class="mt-3">Détaille de la personne</h4>
        <hr />
        <div class="d-flex flex-column">

            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Date de naissance</th>
                        <th>Adresse</th>
                        <th>Email</th>
                        <th>Téléphone</th>
                        <th>Login</th>
                        <th>Rôle</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(model => model.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.FirstName)

                        </td>
                        <td>
                            @Html.DisplayFor(model => model.BirthDate)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Mail)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.TelephoneNumber)
                        </td>

                        <td>
                            @Html.DisplayFor(model => model.Login)
                        </td>

                        <td>
                            @Html.DisplayFor(model => model.Role)
                        </td>

                    </tr>

                </tbody>

            </table>
        </div>
    </div>

    
