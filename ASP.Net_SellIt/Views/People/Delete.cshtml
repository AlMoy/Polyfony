@model EntityASP.Entity.Person

@{
    ViewBag.Title = "Supprimer un personnel";
}
 
    <div>
        <h3>Voulez vous supprimer ce personnel?</h3>
        <hr />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        @Html.ActionLink("Retour à la liste", "Index", "People", null, new { @class = "btn btn-primary" })
        <input type="submit" value="Supprimer" class="btn btn-primary" />
    </div>
        }
        <h4 class="mt-3">Détaill de la personne</h4>
        <hr />
        <div class="d-flex flex-column">

            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.LastName)</th>
                        <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                        <th>@Html.DisplayNameFor(model => model.BirthDate)</th>
                        <th>@Html.DisplayNameFor(model => model.Address)</th>
                        <th>@Html.DisplayNameFor(model => model.Mail)</th>
                        <th>@Html.DisplayNameFor(model => model.TelephoneNumber)</th>
                        <th>@Html.DisplayNameFor(model => model.Login)</th>
                        <th>@Html.DisplayNameFor(model => model.Role)</th>
                   
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(model => model.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.FirstName)

                        </td>
                        <td>
                            @Html.DisplayFor(model => model.BirthDate)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Mail)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.TelephoneNumber)
                        </td>

                        <td>
                            @Html.DisplayFor(model => model.Login)
                        </td>

                        <td>
                            @Html.DisplayFor(model => model.Role)
                        </td>

                    </tr>

                </tbody>

            </table>
        </div>
    </div>

    
