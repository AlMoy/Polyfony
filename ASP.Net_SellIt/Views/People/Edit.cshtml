@model EntityASP.Entity.Person

@{
    ViewBag.Title = "Editer l'information d'un personnel";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group mt-3">
            @Html.ActionLink("Retour à la liste", "Index", "People", null, htmlAttributes: new { @class = "btn btn-secondary text-secondary" })
            <input type="submit" value="Sauvegarder" class="btn btn-primary text-primary" />
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="input-group">
            <div class="input-group-prepend">
                @Html.LabelFor(m => m.LastName, new { @class = "input-group-text" })
            </div>
            @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
        </div>

        <div class="input-group mt-3">
            <div class="input-group-prepend">
                @Html.LabelFor(m => m.FirstName, new { @class = "input-group-text" })
            </div>
            @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
        </div>

        <div class="input-group mt-3">
            <div class="input-group-prepend">
                @Html.LabelFor(m => m.Address, new { @class = "input-group-text" })
            </div>
            @Html.EditorFor(m => m.Address, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
        </div>

        <div class="input-group mt-3">
            <div class="input-group-prepend">
                @Html.LabelFor(m => m.TelephoneNumber, new { @class = "input-group-text" })
            </div>
            @Html.EditorFor(m => m.TelephoneNumber, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TelephoneNumber, "", new { @class = "text-danger" })
        </div>

        <div class="input-group mt-3">
            <div class="input-group-prepend">
                @Html.LabelFor(m => m.BirthDate, new { @class = "input-group-text" })
            </div>
            @Html.EditorFor(m => m.BirthDate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.BirthDate, "", new { @class = "text-danger" })
        </div>

        <div class="input-group mt-3">
            <div class="input-group-prepend">
                @Html.LabelFor(m => m.Login, new { @class = "input-group-text" })
            </div>
            @Html.EditorFor(m => m.Login, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
        </div>

        <div class="input-group mt-3">
            <div class="input-group-prepend">
                @Html.LabelFor(model => model.Role, "Rôle", htmlAttributes: new { @class = "input-group-text" })
            </div>
            @Html.DropDownListFor(model => model.Role, new SelectList(ViewBag.Roles, "id", "name"), new { @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
