@model EntityASP.Entity.Person

@{
    ViewBag.Title = "Ajouter un nouveau personnel";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
             

            <div class="input-group mt-3">
                <div class="input-group-prepend">
                    @Html.LabelFor(m => m.LastName, new { @class = "input-group-text" })
                </div>
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
            </div>

            <div class="input-group mt-3">
                <div class="input-group-prepend">
                    @Html.LabelFor(m => m.FirstName, new { @class = "input-group-text" })
                </div>
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </div>

            <div class="input-group mt-3">
                <div class="input-group-prepend">
                    @Html.LabelFor(m => m.Address, new { @class = "input-group-text" })
                </div>
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            </div>

            <div class="input-group mt-3">
                <div class="input-group-prepend">
                    @Html.LabelFor(m => m.Mail, new { @class = "input-group-text" })
                </div>
                @Html.TextBoxFor(m => m.Mail, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Mail, "", new { @class = "text-danger" })
            </div>

            <div class="input-group mt-3">
                <div class="input-group-prepend">
                    @Html.LabelFor(m => m.TelephoneNumber, new { @class = "input-group-text" })
                </div>
                @Html.TextBoxFor(m => m.TelephoneNumber, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TelephoneNumber, "", new { @class = "text-danger" })
            </div>
        
       

            <div class="input-group mt-3">
                <div class="input-group-prepend">
                    @Html.LabelFor(m => m.BirthDate, new { @class = "input-group-text" })
                </div>
                @Html.EditorFor(m => m.BirthDate, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.BirthDate, "", new { @class = "text-danger" })
            </div>

            <div class="input-group mt-3">
                <div class="input-group-prepend">
                    @Html.LabelFor(m => m.Login, new { @class = "input-group-text" })
                </div>
                @Html.TextBoxFor(m => m.Login, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
            </div>

            <div class="input-group mt-3">
                <div class="input-group-prepend">
                    @Html.LabelFor(m => m.PassWord, new { @class = "input-group-text" })
                </div>
                @Html.TextBoxFor(m => m.PassWord, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-danger" })
            </div>

            <div class="input-group mt-3">
                <div class="input-group-prepend">
                    @Html.LabelFor(model => model.Role, "Rôle", htmlAttributes: new { @class = "input-group-text" })
                </div>
                @Html.DropDownListFor(model => model.Role, new SelectList(ViewBag.Roles, "id", "name"), new { @class = "form-control" })
            </div>
            @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })

            <div class="form-group mt-3">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Créer" class="btn btn-primary" />
                    @Html.ActionLink("Retour à la liste", "Index", "People", null, htmlAttributes: new { @class = "btn btn-primary" })
                </div>

            </div>
        
        </div>
        }


        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
