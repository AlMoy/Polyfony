@model IEnumerable<EntityASP.Entity.Product>

@{
    ViewBag.Title = "Produits en stock";
}

<div class="d-flex flex-column">
    
    <div class="mb-2">
        @Html.ActionLink("Retour", "Index", "Users", null, new { @class = "btn btn-primary" })
        @Html.ActionLink("Nouveau produit", "Create", "Product", new { @class = "btn btn-primary" })
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>

                <th>@Html.DisplayNameFor(model => model.ProductType)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Color)</th>
                <th>@Html.DisplayNameFor(model => model.Size)</th>
                <th>@Html.DisplayNameFor(model => model.Weight)</th>
                <th>@Html.DisplayNameFor(model => model.Quantity)</th>
                <th>Action</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.ProductType.Name)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Color)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Size)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Weight)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.ActionLink("Détails", "Details", new { id = item.Id })
                        @{
                            if (!item.ToValid)
                            {
                                @Html.ActionLink("Valider", "Validate", new { id = item.Id }) 
                            }
                        }
                        @Html.ActionLink("Editer", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Supprimer", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
