@model IEnumerable<EntityASP.Entity.Order>

@{
    ViewBag.Title = "Liste des commandes";
}

<div class="d-flex flex-column">
    <div class="mb-2">
        @Html.ActionLink("Retour", "Index", "Users", null, new { @class = "btn btn-primary" })

    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Remise)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateCreation)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DatePayment)
                </th>
                <th>Action</th>

            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Remise)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DatePayment)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateCreation)
                    </td>
                    <td>
                        @Html.ActionLink("Détails", "Details", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>


