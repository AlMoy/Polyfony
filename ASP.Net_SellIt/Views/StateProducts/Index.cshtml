@model IEnumerable<EntityASP.Entity.StateProduct>

@{
    ViewBag.Title = "Liste des états produit";
}
    <div class="d-flex flex-column">
        <div class="mb-2">
            @Html.ActionLink("Retour", "Divers", "Users", null, new { @class = "btn btn-primary" })

            @Html.ActionLink("Ajout", "Create", "StateProduct", new { @class = "btn btn-primary" })
        </div>
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>

                    <th>Action</th>

                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>

                        <td>
                            @Html.ActionLink("Editer", "Edit", new { id = item.Id }) |
                            @*@Html.ActionLink("Détails", "Details", new { id = item.Id }) |*@
                            @Html.ActionLink("Supprimer", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
