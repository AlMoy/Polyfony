@model EntityASP.Entity.Role

@{
    ViewBag.Title = "Supprimer un rôle";
}
    <div>

        <h3>Voulez vous supprimer ce rôle?</h3>
        <hr />
        

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    @Html.ActionLink("Retour à la liste", "Index", "Roles", null, new { @class = "btn btn-primary" })
                    <input type="submit" value="Supprimer" class="btn btn-primary" />
                </div>
            }

            <h4 class="mt-3">Détaill du rôle</h4>
            <hr />
            <div class="d-flex flex-column">
                <table class="table table-striped table-bordered table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Html.DisplayFor(model => model.Name)
                            </td>

                        </tr>

                    </tbody>

                </table>
            </div>

        </div>
    
