@model EntityASP.Entity.Role

@{
    ViewBag.Title = "Editer un rôle";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="input-group">
            <div class="input-group-prepend">
                @Html.LabelFor(model => model.Name, new { @class = "input-group-text" })
            </div>
            @Html.EditorFor(model => model.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>

        
        <div class="col-md-offset-2 mt-3">
            @Html.ActionLink("Retour à la liste", "Index", "Roles", null, htmlAttributes: new { @class = "btn btn-primary" })
            <input type="submit" value="Sauvegarder" class="btn btn-primary" />
        </div>

        
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
