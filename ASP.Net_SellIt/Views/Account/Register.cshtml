@model ASP.Net_SellIt.Models.RegisterViewModel
@*{
            ViewBag.Title = "S'inscrire";
        }

    <h2>@ViewBag.Title</h2>*@


@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Créez un nouveau compte.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="input-group">
        <div class="input-group-prepend">
            @Html.LabelFor(m => m.Email, new { @class = "input-group-text" })
        </div>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    </div>
    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

    <div class="input-group mt-3">
        <div class="input-group-prepend">
            @Html.LabelFor(m => m.Password, new { @class = "input-group-text" })
        </div>
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
    </div>
    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

    <div class="input-group mt-3">
        <div class="input-group-prepend">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "input-group-text" })
        </div>
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
    </div>
    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })


    <div class="mt-2">
        <input type="submit" class="btn btn-primary" value="S'inscrire" />
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
